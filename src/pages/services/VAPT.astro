---
import MainLayout from "../layouts/MainLayout.astro";

import data from "../data/siteData";
const VAPTContent = data.textContent.VAPTPage;
import PageHero from "../components/PageHero.astro";
import GetStarted from "../components/GetStarted.astro";

---

<MainLayout pageTitle=`${VAPTContent.header.heading}`>
    <PageHero 
    heading={VAPTContent.header.heading} 
    textContent={VAPTContent.header.textParagraph} 
    imageFileName={VAPTContent.header.bgImageFile}></PageHero>

    <section class="Services bg-gradient-to-br from-[#032309] to-[#102049]">
        <div class="wrapper relative size-full flex justify-center items-center overflow-hidden bg-cover bg-center" style="background-image: url('/assets/images/wave-3.png');">
            <div class="container1320 size-full lg:w-[1100px] lg:pt-10 py-5 lg:px-0 px-5">
                <div class="content-holder w-full text-white">
                    
                    <!-- What We Offer -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="part lg:w-[64%]">
                            <h2 class="text-3xl font-bold">{VAPTContent.content[0].paraHeading}</h2>
                            <p class="mt-4">{VAPTContent.content[0].para1}</p>
                            <p class="mt-4">{VAPTContent.content[0].para2}</p>
                        </div>
                        <div class="part lg:w-[34%] flex justify-center items-center">
                            <div class="card lg:w-full w-[350px] shadow-xl shadow-blue-900 flex flex-col bg-gradient-to-br from-green-500 to-blue-900">
                                <span class="block bg-gradient-to-tr from-purple-700 to-blue-500 h-1"></span>
                                <div class="card-content p-5">
                                    <img src="/assets/images/logo.png" alt="CyberSecurity Finland Logo" class="h-10 w-fit">

                                    <div class="flex justify-end">
                                        <p class="w-2/3 relative">
                                            <i class="fa-sharp fa-solid fa-comma text-blue-600 text-4xl absolute -top-5 -left-5"></i>
                                            {VAPTContent.OtherContent.para1}</p>
                                    </div>

                                    <span class="px-12 py-11 flex justify-center items-center h-56 w-full mt-5 bg-cover bg-[url('/assets/images/imageBorder.png')]">
                                        <img src="/assets/images/service.jpeg" alt="service image" class="size-full object-cover">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Deliverables -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="content">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{VAPTContent.content[1].paraHeading}</h2>
                            <p class="mt-4">{VAPTContent.content[1].para1}</p>
                        </div>
                    </div>

                    <!-- Take Action Today -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="content">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{VAPTContent.content[3].paraHeading}</h2>
                            <p class="mt-4">{VAPTContent.content[3].para1}</p>
                        </div>
                    </div>

                    <!-- Why Choose Us -->
                    <div class="showcase my-10 w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <img src="/assets/images/OIG3.jpeg" alt="" class="lg:w-1/2 rounded-md shadow-lg shadow-cyan-600 h-[350px] object-cover ">
                        <div class="content lg:w-1/2">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{VAPTContent.content[2].paraHeading}</h2>
                            <p class="mt-4">{VAPTContent.content[2].para1}</p>
                            <p class="mt-4">{VAPTContent.content[2].para2}</p>
                        </div>
                    </div>

                    <!-- Contact Us -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="content">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{VAPTContent.content[4].paraHeading}</h2>
                            <p class="mt-4">{VAPTContent.content[4].para1}</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="contentWrapper text-white">
            <div class="wrapper relative size-full flex justify-center items-center overflow-hidden bg-cover bg-center">
                <div class="absolute bottom-0 w-full h-1/2 bg-gradient-to-b from-transparent to-[#072822] z-0"></div>

                <GetStarted></GetStarted>
            </div>
        </div>

    </section>

</MainLayout>