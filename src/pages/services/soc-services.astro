---
import MainLayout from "../layouts/MainLayout.astro";

import data from "../data/siteData";
const SOCContent = data.textContent.SocServicesPage;
import PageHero from "../components/PageHero.astro";
import GetStarted from "../components/GetStarted.astro";
import ServicesPolygon from "../components/ServicesPolygon.astro";

---

<MainLayout pageTitle={SOCContent.header.heading}>
    <PageHero 
    heading={SOCContent.header.heading} 
    textContent={SOCContent.header.textParagraph} 
    imageFileName={SOCContent.header.bgImageFile}></PageHero>

    <section class="Services bg-gradient-to-br from-[#032309] to-[#102049]">
        <div class="wrapper relative size-full flex justify-center items-center overflow-hidden bg-cover bg-center">
            <div class="container1320 size-full lg:w-[1100px] lg:pt-10 py-5 lg:px-0 px-5">
                <div class="content-holder px-6 md:px-12 w-full text-white">

                    <!-- What We Offer -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="content">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{SOCContent.content[0].paraHeading}</h2>
                            <p class="mt-4">{SOCContent.content[0].para1}</p>
                            <p class="mt-4">{SOCContent.content[0].para2}</p>
                        </div>
                    </div>
                    
                    <ServicesPolygon />
                    
                    <!-- Deliverables -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="content">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{SOCContent.content[1].paraHeading}</h2>
                            <p class="mt-4">{SOCContent.content[1].para1}</p>
                        </div>
                    </div>

                    <!-- Why Choose Us -->
                    <div class="showcase my-10 w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <img src="/assets/images/OIG4.jpeg" alt="" class="lg:w-1/2 rounded-md shadow-lg shadow-cyan-600 h-[350px] object-cover ">
                        <div class="content lg:w-1/2">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{SOCContent.content[2].paraHeading}</h2>
                            <p class="mt-4">{SOCContent.content[2].para1}</p>
                            <p class="mt-4">{SOCContent.content[2].para2}</p>
                        </div>
                    </div>

                    <!-- Take Action Today -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="content">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{SOCContent.content[3].paraHeading}</h2>
                            <p class="mt-4">{SOCContent.content[3].para1}</p>
                        </div>
                    </div>

                    <!-- Contact Us -->
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="content">
                            <h2 class="text-3xl font-semibold mt-5 mb-3">{SOCContent.content[4].paraHeading}</h2>
                            <p class="mt-4">{SOCContent.content[4].para1}</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="contentWrapper text-white">
            <div class="wrapper relative size-full flex justify-center items-center overflow-hidden bg-cover bg-center">
                <div class="absolute bottom-0 w-full h-1/2 bg-gradient-to-b from-transparent to-[#072822] z-0"></div>

                <GetStarted></GetStarted>
            </div>
        </div>

    </section>

</MainLayout>