---
import HomeHero from "./components/Home_Hero.astro";
import HomeServices from "./components/Home_Services.astro";
import HomeExpertise from "./components/Home_Expertise.astro";

import MainLayout from "./layouts/MainLayout.astro";
import HomeIncident from "./components/Home_Incident.astro";
import ContactCards from "./components/contactCards.astro";
import TrustedBrands from "./components/TrustedBrands.astro";
import VideoBg from "./components/VideoBg.astro";
import SliderCards from "./components/SliderCards.astro";
import FooterLinks from "./components/FooterLinks.astro";
import SolutionsHoverCards from "./components/SolutionsHoverCards.astro";
import HomeContact from "./components/HomeContact.astro";
---

<MainLayout pageTitle="Home">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
	<HomeHero />
	<HomeServices />
	<HomeExpertise />
	<HomeIncident />
	<ContactCards />
	<TrustedBrands />
	<VideoBg />
	<SliderCards />
	<SolutionsHoverCards />
	<!-- <HomeContact /> -->
	
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
	<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
	<script is:inline>
		//#region Animate on Scroll
		AOS.init({
		    disable: "mobile",
		});
		//#endregion

		//#region Swiper JS Carousal
		const swiperEl = document.querySelector(
		    ".trustedBrandsSection swiper-container",
		);

		const swiperEl2 = document.querySelector(
		    ".sliderCards swiper-container",
		);

		Object.assign(swiperEl, {
		    loop: "true",
		    freeMode: "true",
		    autoplay: {
		        delay: 0,
		        disableOnInteraction: false,
		    },
		    speed: "3500",
		    slidesPerView: 2,
		    spaceBetween: 30,
		
		    breakpoints: {
		        "@0.00": {
		            slidesPerView: 2,
		            spaceBetween: 10,
		        },
		        "@0.75": {
		            slidesPerView: 2,
		            spaceBetween: 20,
		        },
		        "@1.00": {
		            slidesPerView: 2,
		            spaceBetween: 40,
		        },
		        "@1.50": {
		            slidesPerView: 2,
		            spaceBetween: 30,
		        },
		    },
		});

		Object.assign(swiperEl2, {
		    freeMode: "true",
		    slidesPerView: 3.3,
		    spaceBetween: 30,
		
		    breakpoints: {
		        "@0.00": {
		            slidesPerView: 1.6,
		            spaceBetween: 10,
		        },
		        "@0.75": {
		            slidesPerView: 2.3,
		            spaceBetween: 20,
		        },
		        "@1.00": {
		            slidesPerView: 2.5,
		            spaceBetween: 40,
		        },
		        "@1.50": {
		            slidesPerView: 2.7,
		            spaceBetween: 30,
		        },
		    },
		});

		swiperEl.initialize();
		swiperEl2.initialize();
		//#endregion
	</script>
</MainLayout>
