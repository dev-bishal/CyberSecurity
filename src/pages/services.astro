---
import data from "./data/siteData";
const serviceContentData = data.textContent.Services1;
const awardSectionData = serviceContentData.awardsSection;
import PageHero from "./components/PageHero.astro";
import MainLayout from "./layouts/MainLayout.astro";

---
<MainLayout pageTitle="Services at CyberSecurity Finland">
    <PageHero heading={serviceContentData.header.heading} textContent={serviceContentData.header.textParagraph} imageFileName="bg(1).jpeg"></PageHero>

    <section class="Services bg-gradient-to-br from-[#032309] to-[#102049]">
        <div class="wrapper relative size-full flex justify-center items-center overflow-hidden bg-cover bg-center" style="background-image: url('/assets/images/wave-3.png');">
            <div class="container1320 size-full lg:w-[1200px] lg:pt-10 py-5 lg:px-0 px-5">
                <div class="content-holder w-full text-white">
                    <div class="showcase w-full flex lg:flex-row flex-col-reverse gap-5 items-center justify-center">
                        <div class="part lg:w-[64%]">
                            <h2 class="text-3xl font-bold">{serviceContentData.servicesGrid.title}</h2>
                            <p class="mt-4">{serviceContentData.servicesGrid.textContent1}</p>
                            <p class="mt-4">{serviceContentData.servicesGrid.textContent2}</p>
                        </div>
                        <div class="part lg:w-[34%] flex justify-center items-center">
                            <div class="card lg:w-full w-[350px] shadow-xl shadow-blue-900 flex flex-col bg-gradient-to-br from-green-500 to-blue-900">
                                <span class="block bg-gradient-to-tr from-purple-700 to-blue-500 h-1"></span>
                                <div class="card-content p-5">
                                    <img src="/assets/images/logo.png" alt="CyberSecurity Finland Logo" class="h-10 w-fit">

                                    <div class="flex justify-end">
                                        <p class="w-2/3 relative">
                                            <i class="fa-sharp fa-solid fa-comma text-blue-600 text-4xl absolute -top-5 -left-5"></i>
                                            {serviceContentData.servicesGrid.rightCardText}</p>
                                    </div>

                                    <span class="px-12 py-11 flex justify-center items-center h-56 w-full mt-5 bg-cover bg-[url('/assets/images/imageBorder.png')]">
                                        <img src="/assets/images/service.jpeg" alt="service image" class="size-full object-cover">

                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="awards-recognition w-full flex flex-col gap-3 text-center my-5">
                        <h2 class="text-3xl font-bold">{awardSectionData.title}</h2>
                        <p>{awardSectionData.subText}</p>

                        <div class="awards-holder flex gap-3 w-full flex-wrap justify-center items-center mt-4">
                            {
                                awardSectionData.awardCards.map((awardCard)=>(
                                    <div class="awards flex flex-col justify-between w-[45%] md:w-[220px] md:h-[300px] h-fit py-5 px-3 cursor-pointer hover:bg-gradient-to-tr bg-gradient-to-br from-emerald-600 to-green-700 shadow-lg">
                                        <p class="text-center">
                                            <a href={awardCard.redirectPath}>{awardCard.awardTitle}</a>
                                        </p>
                                        <img src={awardCard.imageFile} alt="award image" class="w-full h-40 py-3 object-contain" />
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</MainLayout>