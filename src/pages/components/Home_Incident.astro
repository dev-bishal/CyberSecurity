---
import data from "../data/siteData";
const incidentData = data.textContent.HomePage.Incident;
---

<section class="benefit relative lg:h-[110vh] xl:h-[80vh] bg-gradient-to-br from-[#032309af] to-[#010c24]">
    <div class="wrapper z-[2] relative size-full flex justify-center items-center overflow-hidden">
        <div class="bg-shape hidden z-0 absolute size-full lg:flex justify-end items-center overflow-hidden">
            <img src="/assets/images/bgIncident2.png" class="brightness-50 w-[60%]">
        </div>
        
        <div class="content z-10 flex justify-center items-center">
            <div class="container1320 lg:w-[1020px] lg:pt-20">
                <div class="wrapper flex w-full lg:flex-row flex-col lg:gap-40 gap-12 lg:px-0 py-5">
                    
                    <div class="content-left w-full lg:w-[35%] text-white flex flex-col justify-center items-center px-5"  data-aos="fade-right" data-aos-delay="500">
                        
                        <span class="flex flex-col gap-7 leading-10">
                            <h2 class="text-[2.5rem] font-bold">{incidentData.heading}</h2>
                            <span class="w-1/3 border border-[#10ac51] mt-5"></span>
                            <p class="leading-7">{incidentData.textParagraph}</p>
                        </span>
                        
                    </div>
                    <div class="content-right w-full lg:w-[75%] text-white lg:bg-transparent bg-[#07132899] p-5" data-aos="fade-left" data-aos-delay="500">
                        <ul>
                            {
                                incidentData.rightSide_Paragraphs.map((content) => {
                                    return (
                                    <li class="flex items-start gap-7 pb-5">
                                        <i class="fa-solid fa-arrow-right mt-4"></i>
                                        <div class="content">
                                            <h3 class="text-xl">{content.title}</h3>
                                            <p class="text-sm">{content.textParagraph}</p>
                                        </div>
                                    </li>)
                                })
                            }
                        </ul>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>

<style is:inline>
    .triangleCurve.top{
        transform: skewX(-57deg);
    }

    .triangleCurve.bottom{
        transform: skewX(57deg);
    }
</style>

