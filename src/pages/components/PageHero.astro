---
interface Props {
    heading: string,
    textContent : string,
    imageFileName : string
}

const {heading, textContent, imageFileName} = Astro.props;

---
<!-- h-[40vh] -->
<section class="lg:h-[60vh] lg:pb-0 pb-5 relative text-white bg-center bg-no-repeat bg-cover" style=`background-image: url('/assets/images/${imageFileName}')`> 
    <div class="overlay absolute size-full bg-[#0000008a]"></div>

    <div class="wrapper size-full relative w-full flex justify-center items-center z-[2] ">
        <div class="container1320 lg:w-[1120px] pt-20">
            <div class="content lg:px-0 px-5 text-center">
                <h1 class="lg:text-5xl text-4xl font-bold text-center lg:px-52 lg:leading-[70px] leading-10">{heading}</h1>
                <p class="">{ textContent }</p>
            </div>
        </div>
    </div>
</section>
