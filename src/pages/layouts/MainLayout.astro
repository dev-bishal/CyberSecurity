---
import Head from "../components/Head.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Props {
    pageTitle ?: string
    pageDescription ?: string
    pageType ?: string
    pageFeaturedImageUrl ?: string
}

const {pageTitle, pageDescription, pageType, pageFeaturedImageUrl} = Astro.props;

---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

    <Head pageTitle={pageTitle} pageDescription={pageDescription} {pageType} {pageFeaturedImageUrl}/>

    <body class="font-lexend">
        <Navbar></Navbar>
        <div class="content-placeholder flex justify-center items-center">
            <main class="w-full">
	            <span class="scrollHeader"></span>
                <slot></slot>
            </main>
        </div>
        <Footer></Footer>
        
        <script src="/assets/scripts/main.js" is:inline></script>
    </body>
</html>

